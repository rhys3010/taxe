<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.CreateBookingActivity">

    <!-- Toolbar -->
    <include layout="@layout/two_button_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/create_booking_form"/>

    <!-- Booking Creation Form -->
    <ScrollView
        android:id="@+id/create_booking_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_margin_create_booking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Pickup Location Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/form_margin_create_booking">

                <!-- Pickup Location Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <!-- Pickup Location Field -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pickup_location_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/edit_text_icon_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pickup_location_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pickup_location_input_hint"
                        android:inputType="textCapWords"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- Destination Location Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/form_margin_create_booking">

                <!-- Pickup Location Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <!-- Destination Location Field -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/destination_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/edit_text_icon_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/destination_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/destination_input_hint"
                        android:inputType="textCapWords"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- No Passengers Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/form_margin_create_booking">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_people_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <!-- Number of Passengers Field -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/number_of_passengers_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/edit_text_icon_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/number_of_passengers_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_of_passengers_input_hint"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- Desired Time Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/form_margin_create_booking">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <!-- Requested Time Field -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/time_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/edit_text_icon_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/time_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/time_input_hint"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- Additional Notes Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/form_margin_create_booking">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_note_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <!-- Additional Notes Field (Optional) -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/notes_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/edit_text_icon_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/notes_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/notes_input_hint"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLength="400"
                        android:maxLines="8"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Progress Bar -->
    <include layout="@layout/progress_indicator_overlay"/>

</android.support.constraint.ConstraintLayout>