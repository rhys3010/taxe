<layout>
    <data>
        <variable
            name="note"
            type="String"/>
        <variable
            name="position"
            type="String"/>
    </data>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/note_card_view_horizontal_margin"
    android:layout_marginEnd="@dimen/note_card_view_horizontal_margin"
    android:layout_marginTop="@dimen/note_card_view_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/note_card_view_text_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{position + `.`}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/note_card_view_text_margin"
            android:text="@{note}"/>


    </LinearLayout>



</android.support.v7.widget.CardView>

</layout>