<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.BookingOverviewFragment">

    <!-- Empty Booking View -->
    <FrameLayout
        android:id="@+id/empty_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_directions_car_black_24dp"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/header_1_margin"
                android:textSize="@dimen/text_size_header_6"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="true"
                android:text="@string/no_active_booking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/header_2_margin"
                android:textSize="@dimen/text_size_body_1"
                android:text="@string/get_started"/>

        </LinearLayout>
    </FrameLayout>

    <!-- Card View -->
    <android.support.v7.widget.CardView
        android:id="@+id/booking_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Pickup Location Row -->
            <LinearLayout
                android:id="@+id/pickup_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_my_location_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/pickup_location"/>

                    <TextView
                        android:id="@+id/pickup_location_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fferm Penglais"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Destination Row -->
            <LinearLayout
                android:id="@+id/destination_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/pickup_row">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/destination"/>

                    <TextView
                        android:id="@+id/destination_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bow Street"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Due at Row -->
            <LinearLayout
                android:id="@+id/due_at_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/destination_row">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/due_at"/>

                    <TextView
                        android:id="@+id/due_at_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:03"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Driver Row -->
            <LinearLayout
                android:id="@+id/driver_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/due_at_row">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_box_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/driver"/>

                    <TextView
                        android:id="@+id/driver_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Status Row -->
            <LinearLayout
                android:id="@+id/status_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/driver_row">

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_hourglass_full_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/status"/>

                    <TextView
                        android:id="@+id/status_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pending"/>
                </LinearLayout>
            </LinearLayout>

            <!-- No Passengers Row -->
            <LinearLayout
                android:id="@+id/no_passengers_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/status_row">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_people_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/booking_info_icon_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1"
                        android:text="@string/no_passengers"/>

                    <TextView
                        android:id="@+id/no_passengers_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Cancel Button -->
            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/booking_info_row_margin"
                android:layout_below="@id/no_passengers_row"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="@string/cancel"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>