<layout>
    <data>
        <import type="android.view.View"/>

        <variable
            name="booking"
            type="xyz.rhysevans.taxe.model.Booking"/>

        <variable
            name="userRole"
            type="String"/>
    </data>
    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.booking.BookingOverviewFragment">

                <!-- Progress Bar (Not using regular overlay-->
                <FrameLayout
                    android:id="@+id/progress_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone">

                    <ProgressBar
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:alpha="1"/>

                </FrameLayout>

                <!-- Empty Booking View -->
                <include layout="@layout/empty_booking"/>

                <!-- Card View -->
                <android.support.v7.widget.CardView
                    android:id="@+id/booking_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/form_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="4dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Pickup Location Row -->
                        <LinearLayout
                            android:id="@+id/pickup_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_my_location_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text="@string/pickupLocation"/>

                                <TextView
                                    android:id="@+id/pickup_location_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{booking.pickupLocation}"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Destination Row -->
                        <LinearLayout
                            android:id="@+id/destination_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:layout_below="@id/pickup_row">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_location_on_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text="@string/destination"/>

                                <TextView
                                    android:id="@+id/destination_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{booking.destination}"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Due at Row -->
                        <LinearLayout
                            android:id="@+id/due_at_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:layout_below="@id/destination_row">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_access_time_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text="@string/due_at"/>

                                <TextView
                                    android:id="@+id/due_at_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{@string/time_display_format(booking.time)}"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Driver Row -->
                        <LinearLayout
                            android:id="@+id/driver_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:layout_below="@id/due_at_row">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_account_box_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text='@{userRole.equals("Driver") ? @string/customer : @string/driver}'/>

                                <TextView
                                    android:id="@+id/driver_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text='@{userRole.equals("Driver") ? booking.customer.name : (booking.driver.name ?? @string/not_applicable)}'/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Status Row -->
                        <LinearLayout
                            android:id="@+id/status_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:layout_below="@id/driver_row">

                            <ImageView
                                android:id="@+id/status_icon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_hourglass_full_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text="@string/status"/>

                                <TextView
                                    android:id="@+id/status_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{booking.status.name()}"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/edit_status_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:visibility='@{userRole.equals("Driver") ? View.VISIBLE : View.GONE }'/>
                        </LinearLayout>

                        <!-- No Passengers Row -->
                        <LinearLayout
                            android:id="@+id/no_passengers_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:layout_below="@id/status_row">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_people_black_24dp"
                                android:tint="@color/colorPrimary"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/booking_info_icon_margin">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_body_1"
                                    android:text="@string/noPassengers" />

                                <TextView
                                    android:id="@+id/no_passengers_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{Integer.toString(booking.noPassengers)}"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/button_bar_separator"
                            android:layout_below="@id/no_passengers_row"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>

                        <!-- Button Bar -->
                        <RelativeLayout
                            android:id="@+id/button_bar"
                            android:layout_below="@id/button_bar_separator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/booking_info_row_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/view_notes_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/colorPrimary"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:text="@string/view_notes"/>

                            <TextView
                                android:id="@+id/release_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@android:color/holo_red_light"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:text="@string/release"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/cancel_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/colorPrimary"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:text="@string/cancel"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- Dummy View to Force Scroll View to work -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/booking_overview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>